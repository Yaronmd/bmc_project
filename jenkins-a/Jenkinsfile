pipeline {
    agent any

    environment {
        JENKINS_B_URL = credentials('jenkins-b-url')
        TARGET_JOB_NAME = 'job-b'
        JENKINS_USER = 'admin'
        JENKINS_API_TOKEN = credentials('jenkins-api-token')
    }

    stages {
        stage('Run validation script') {
            steps {
                echo "Running validate_ls.sh..."
                sh 'chmod +x /scripts/validate_ls.sh && /scripts/validate_ls.sh'
            }
        }
    }
}
